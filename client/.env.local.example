# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:9999
NEXT_PUBLIC_SOCKET_URL=http://localhost:9999

# App Configuration
NEXT_PUBLIC_APP_NAME="Twilsta"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Environment
NODE_ENV=development

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY="twilsta_token"

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif"
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES="video/mp4,video/webm"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# PWA
NEXT_PUBLIC_PWA_NAME="Twilsta"
NEXT_PUBLIC_PWA_SHORT_NAME="Twilsta"
NEXT_PUBLIC_PWA_DESCRIPTION="A modern Twilsta built with Next.js"
